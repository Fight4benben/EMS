<div class="container-fluid main-top equipAlarm">
    <div class="col-xs-12">
        <div class="equip-row">
            <div class="filter-width">
                建筑名称：
            </div>
            <div class="se-right equip-right">
                <form role="form">
                    <div class="form-group">
                        <select class="form-control" id="buildinglist"></select>
                    </div>
                </form>
            </div>
        </div>
        <div class="equip-row">
            <label class="equip-width">类型：</label>
            <select id="dateType" class="equip-date">
                <option value="DD">日</option>
                <option value="MM">月</option>
                <option value="SS">季度</option>
            </select>
        </div>
        <div class="equip-row equip-row2">
            <label class="equip-width">日期：</label>
            <div id="dayCalendar" class="input-group date form_date count-data" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                <input id="daycalendarBox" class="form-control" size="16" type="text" value="" readonly>
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
        </div>
        <div class="Ranking-sort">
            <label class="equip-width season-alarm">季度：</label>
            <select id="season" class="form-control equip-right2 equip-right3 season-alarm">
                <option value="3">1</option>
                <option value="6">2</option>
                <option value="9">3</option>
                <option value="12">4</option>
            </select>
            <label class="equip-width">分类：</label>
            <select id="energys" class="form-control equip-right2"></select>
        </div>
        <button id="searchButton" type="button" class="btn-equip">查询</button>
        <div class="equip-row equip-row2">
            &nbsp; &nbsp;绿色:下降比例小于-50%，蓝色:下降比例在20%到50%之间；
            <br />
            &nbsp; &nbsp;红色:上升比例大于50%，黄色：上升比例在20%到50%之间。
        </div>
        <!-- <button id="setModal" class="target" data-toggle="modal">
        <i class="fa fa-area-chart"></i>考核目标设置
    </button> -->
    </div>
    <div id="alarmTable" class="col-xs-12 R-Columnar">
       
    </div>

   <!--考核目标设置模态框-->
    <div class="modal fade bs-example-modal-sm" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title" id="myModalLabel">考核目标设置</h5>
          </div>
          <div class="modal-body">
            <label>等级1：</label>
            <input id="level1" type="text"/> %
            <label>等级2：</label>
            <input id="level2" type="text"/> %
          </div>
          <div class="modal-footer">
            <button id="saveBtn" type="button" class="btn btn-primary">确定</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          </div>
        </div>
      </div>
    </div>

</div>
